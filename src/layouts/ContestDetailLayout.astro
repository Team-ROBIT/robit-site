---
// DocsLayout 임포트 제거 (이미 상위에서 감싸고 있음)
import { Image } from 'astro:assets';

interface Props {
  title: string;
  heroImage: any;
}

const { title, heroImage } = Astro.props;
---

<div class="contest-detail-wrapper">
  <div class="relative w-full h-[350px] rounded-3xl overflow-hidden mb-16 shadow-2xl">
    <Image src={heroImage} alt={title} class="absolute inset-0 w-full h-full object-cover !m-0" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex items-end p-10">
      <h1 class="text-4xl md:text-5xl font-black text-white tracking-tighter !m-0">
        {title}
      </h1>
    </div>
  </div>

  <div class="space-y-16">
    <slot />
  </div>
</div>